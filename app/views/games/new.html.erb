<div class="container d-flex flex-column justify-content-center mt-5">
  <h1 class="text-center">Welcome a this game:</h1>
  <ul class="list-group list-group-horizontal mt-5 justify-content-center mb-5">
    <% @letters.each do |letter| %>
      <li class="list-group-item bg-info text-white shadow p-3 me-3 p-4 mb-3"><%= letter %></li>
    <% end %>
  </ul>
  <form action="/score" method="post" data-turbo="false" class="d-flex flex-column justify-content-center mt-5">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag 'grid', "#{@letters.join}"  %>
      <div class="justify-content-center">
        <input type="text" class="form-control text-center ms-3 mt-3" name="word" placeholder="write a word">
        <input type="submit" class="btn btn-primary btn-lg justify-content-center ms-3 mt-3 w-100" value="submit">
      </div>
  </form>
</div>
